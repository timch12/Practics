<Window x:Class="Task_4.Page2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_4"
        mc:Ignorable="d"
        Title="Page2" Height="450" Width="800">
    <Grid>
        <Button x:Name="Back" Content="В главное меню" HorizontalAlignment="Left" Height="71" Margin="56,58,0,0" VerticalAlignment="Top" Width="129" Click="Back_Click" BorderBrush="#FFE6C5C5" Background="#FFE8BFBF"/>
        <Button x:Name="button" Content="Вычислить факториал" HorizontalAlignment="Left" Height="90" Margin="116,232,0,0" VerticalAlignment="Top" Width="174" Click="button_Click" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="num" HorizontalAlignment="Left" Height="51" Margin="323,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"/>
        <TextBlock HorizontalAlignment="Left" Height="38" Margin="323,105,0,0" TextWrapping="Wrap" Text="Введите число" VerticalAlignment="Top" Width="95" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
        <Label x:Name="ans" Content="" HorizontalAlignment="Left" Height="41" Margin="323,232,0,0" VerticalAlignment="Top" Width="95"/>

    </Grid>
</Window>
